---
- name: We are going to install some package here for the server
  yum: 
    name: "{{ item }}"
    state: present
  with_items:
    - httpd
    - mariadb-server
    - mariadb
    - php
    - php-mysql 
    - MySQL-python
  tags: apache
- name: starting the services
  service:
    name: "{{ item }}" 
    state: started
    enabled: yes
  with_items:
    - httpd
    - mariadb 
  tags: apache
    
